{
  "$comment": "NarrativeVox development container configuration",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "anthropic.claude-code",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "usernamehw.errorlens",
        "wayou.vscode-todo-highlight",
        "biomejs.biome",
        "oven.bun-vscode",
        "bierner.markdown-mermaid"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "files.autoSave": "onFocusChange",
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.autofetch": true,
        "git.confirmSync": false
      }
    }
  },
  "containerEnv": {
    "CLAUDE_SETTINGS_PATH": "${containerWorkspaceFolder}/.claude/settings.json",
    "GIT_CONFIG_GLOBAL": "/home/dev-user/.config/git/config",
    "VOICEVOX_URL": "http://voicevox-engine:50021",
    "TZ": "Asia/Tokyo"
  },
  "remoteEnv": {
    "PATH": "/home/dev-user/.local/bin:/home/dev-user/.bun/bin:${containerEnv:PATH}"
  },
  "initializeCommand": "bash .devcontainer/initialize.sh",
  "runArgs": [
    "--network=narrative-vox-net"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/dev-user/.gitconfig-host,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.ssh,target=/home/dev-user/.ssh,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.npmrc,target=/home/dev-user/.npmrc,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.claude/rules,target=/home/dev-user/.claude/rules,type=bind",
    "source=${localEnv:HOME}/.claude/ide,target=/home/dev-user/.claude/ide,type=bind",
    "source=${localEnv:HOME}/.claude/plans,target=/home/dev-user/.claude/plans,type=bind",
    "source=${localEnv:HOME}/.claude/todos,target=/home/dev-user/.claude/todos,type=bind",
    "source=${localEnv:HOME}/.codex,target=/home/dev-user/.codex,type=bind"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "timezone": "Asia/Tokyo",
      "username": "dev-user"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "remoteUser": "dev-user",
  "name": "narrative-vox"
}
