{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://narrative-vox/schemas/stage4.voicevox-text.schema.json",
  "title": "Stage4 VoiceVox Text",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "meta",
    "utterances",
    "dictionary_candidates",
    "quality_checks"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "project_id",
        "run_id",
        "episode_id",
        "source_script_path",
        "generated_at"
      ],
      "properties": {
        "project_id": {
          "type": "string",
          "minLength": 1
        },
        "run_id": {
          "type": "string",
          "minLength": 1
        },
        "episode_id": {
          "type": "string",
          "pattern": "^E[0-9]{2}$"
        },
        "source_script_path": {
          "type": "string",
          "minLength": 1
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "utterances": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "utterance_id",
          "section_id",
          "section_title",
          "text",
          "pause_length_ms"
        ],
        "properties": {
          "utterance_id": {
            "type": "string",
            "pattern": "^U[0-9]{3}$"
          },
          "section_id": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "section_title": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "pause_length_ms": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2000
          }
        }
      }
    },
    "dictionary_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "surface",
          "reading_or_empty",
          "priority",
          "occurrences",
          "source"
        ],
        "properties": {
          "surface": {
            "type": "string",
            "minLength": 1
          },
          "reading_or_empty": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "HIGH",
              "MEDIUM",
              "LOW"
            ]
          },
          "occurrences": {
            "type": "integer",
            "minimum": 1
          },
          "source": {
            "type": "string",
            "minLength": 1
          },
          "note": {
            "type": "string"
          }
        }
      }
    },
    "quality_checks": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "utterance_count",
        "max_chars_per_utterance",
        "has_ruby_notation",
        "speakability",
        "warnings"
      ],
      "properties": {
        "utterance_count": {
          "type": "integer",
          "minimum": 1
        },
        "max_chars_per_utterance": {
          "type": "integer",
          "minimum": 1
        },
        "has_ruby_notation": {
          "type": "boolean"
        },
        "speakability": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "score",
            "average_chars_per_utterance",
            "long_utterance_ratio",
            "terminal_punctuation_ratio"
          ],
          "properties": {
            "score": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            },
            "average_chars_per_utterance": {
              "type": "number",
              "minimum": 0
            },
            "long_utterance_ratio": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "terminal_punctuation_ratio": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
