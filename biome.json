{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.js",
      "!!**/node_modules/"
    ]
  },

  "formatter": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {}
        }
      }
    }
  },

  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
