{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["node", "bun"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
